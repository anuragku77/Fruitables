<div class="container-fluid testimonial py-5">
  <div class="container py-5">
    <div class="testimonial-header text-center">
      <h4 class="text-primary">{{ section.settings.testimonial_heading }}</h4>
      <h1 class="display-5 mb-5 text-dark">{{ section.settings.testimonial_content }}</h1>
    </div>
    <div class="owl-carousel testimonial-carousel">
      {% for block in section.blocks %}
        <div class="testimonial-item img-border-radius bg-light rounded p-4">
          <div class="position-relative">
            <i class="fa fa-quote-right fa-2x text-secondary position-absolute" style="bottom: 30px; right: 0;"></i>
            <div class="mb-4 pb-4 border-bottom border-secondary">
              <p class="mb-0">{{ block.settings.client_comment }}</p>
            </div>
            <div class="d-flex align-items-center flex-nowrap">
              <div class="bg-secondary rounded">
                <img
                  src="{{block.settings.client_image | img_url: 'medium' }}"
                  class="img-fluid w-100 h-100 bg-secondary rounded"
                  alt="{{ block.settings.client_name }} "
                  width="1200"
                  height="1200"
                >
              </div>
              <div class="ms-4 d-block">
                <h4 class="text-dark">{{ block.settings.client_name }}</h4>
                <p class="m-0 pb-3">{{ block.settings.client_profession }}</p>
                {%- if section.settings.star_rating != -1 -%}
                  <div class="d-flex pe-5">
                    {%- for i in (1..5) -%}
                      {%- if i <= section.settings.star_rating -%}
                        <i class="fas fa-star text-primary"></i>
                      {%- else -%}
                        <i class="fas fa-star"></i>
                        {% comment %} <svg viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M6.71 15.116l3.357-1.658.892.452 2.327 1.178-.56-3.912.708-.707 1.29-1.29-3.235-.576-.445-.915-1.059-2.176L8.4 8.683l-1.005.168-2.098.35 1.975 1.975-.141.99-.422 2.95zM5.2 18a.8.8 0 01-.792-.914l.743-5.203-2.917-2.917a.8.8 0 01.434-1.355l4.398-.733 2.218-4.435a.8.8 0 011.435.008l2.123 4.361 4.498.801a.8.8 0 01.425 1.353l-2.917 2.917.744 5.203a.8.8 0 01-1.154.828l-4.382-2.22-4.502 2.223A.792.792 0 015.2 18z" fill="#5C5F62"/></svg> {% endcomment %}
                      {%- endif -%}
                      {% comment %} </div> {% endcomment %}
                    {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Testimonials Section",
  "enabled_on": {
    "templates": ["index","page"]
  },
  "settings": [
    {
      "type": "text",
      "id": "testimonial_heading",
      "label": "Testimonial Heading"
    },
    {
      "type": "text",
      "id": "testimonial_content",
      "label": "Testimonial Content"
    }
  ],
  "blocks": [
    {
      "type": "client_section",
      "name": "Add Client Testimonial",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Client Comment"
        },
        {
          "type": "text",
          "id": "client_name",
          "label": "Client Name"
        },
        {
          "type": "text",
          "id": "client_profession",
          "label": "Client Profession"
        },
        {
          "type": "image_picker",
          "id": "client_image",
          "label": "Client Image"
        },
        {
          "type": "range",
          "id": "star_rating",
          "min": -1,
          "max": 5,
          "label": "Star rating",
          "default": 5,
          "info": "Set to -1 to hide star rating"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Section"
    }
  ]
}
{% endschema %}
