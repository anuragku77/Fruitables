{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="related_product_container" class="section-{{ section.id }}-padding">
  <h1 class="fw-bold mb-0">{{ section.settings.heading }}</h1>
  <div id="related_products"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var productId = "{{ product.id }}";
    var sectionId = "{{ section.id }}";
    var productsToShow = "{{ section.settings.products_to_show }}";
    var recommendationsUrl = "{{ routes.product_recommendations_url }}?limit=" + productsToShow + "&section_id=" + sectionId + "&product_id=" + productId;

    fetch(recommendationsUrl)
      .then(response => response.json())
      .then(data => {
        var relatedProductsContainer = document.getElementById('related_products');
        var htmlContent = '';

        if (data.products.length > 0) {
          htmlContent += '<div class="owl-carousel related-product-carousel justify-content-center">';
          data.products.forEach(function(product) {
            htmlContent += `
              <div class="border border-primary rounded position-relative related-product-item">
                <div class="related-product-img">
                  <img src="${product.images[0].src}" class="img-fluid w-100 rounded-top" alt="${product.title}" height="1200" width="1200">
                </div>
                <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">
                  ${product.tags.join(', ')}
                </div>
                <div class="p-4 pb-0 rounded-bottom">
                  <h4>${product.title}</h4>
                  <p>${product.body_html}</p>
                  <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold">${Shopify.formatMoney(product.price)}</p>
                    <a href="/cart/add?id=${product.variants[0].id}" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary">
                      <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                    </a>
                  </div>
                </div>
              </div>
            `;
          });
          htmlContent += '</div>';
        }

        relatedProductsContainer.innerHTML = htmlContent;
        initializeCarousel(); // Initialize the carousel after content is loaded
      })
      .catch(error => console.error('Error loading related products:', error));
  });

  function initializeCarousel() {
    $('.related-product-carousel').owlCarousel({
      autoplay: true,
      smartSpeed: 1500,
      center: false,
      dots: true,
      loop: true,
      margin: 25,
      nav: true,
      navText: [
        '<i class="bi bi-arrow-left"></i>',
        '<i class="bi bi-arrow-right"></i>',
      ],
      responsiveClass: true,
      responsive: {
        0: { items: 1 },
        576: { items: 1 },
        768: { items: 2 },
        992: { items: 3 },
        1200: { items: 4 },
      },
    });
  }
</script>

