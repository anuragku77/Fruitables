<!-- Vesitable Shop Start -->
<div class="container-fluid vesitable py-5">
  <div class="container py-5">
    <h1 class="mb-0">{{ section.settings.section_title }}</h1>
    <div class="owl-carousel vegetable-carousel justify-content-center">
      {% for product in section.settings.product_collection.products %}
        <div class="border border-primary rounded position-relative vesitable-item">
          <div class="vesitable-img">
            <img
              src="{{ product.featured_image | img_url: 'medium' }}"
              class="img-fluid w-100 rounded-top"
              alt="{{ product.title }} "
              width="1200"
              height="1200"
            >
          </div>
          <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">
            {{ product.tags }}
          </div>
          <span class="wishlist_btn" product-handle-wishlist="{{ product.handle }}">
            <svg
              width="40px"
              height="40px"
              viewBox="0 0 64 64"
              xmlns="http://www.w3.org/2000/svg"
              stroke-width="3"
              stroke="#000000"
              fill="none"
            >
              <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M9.06,25C7.68,17.3,12.78,10.63,20.73,10c7-.55,10.47,7.93,11.17,9.55a.13.13,0,0,0,.25,0c3.25-8.91,9.17-9.29,11.25-9.5C49,9.45,56.51,13.78,55,23.87c-2.16,14-23.12,29.81-23.12,29.81S11.79,40.05,9.06,25Z"></path></g>
            </svg>
          </span>
          <div class="p-4 rounded-bottom">
            <h4>{{ product.title }}</h4>
            <p>{{ product.description }}</p>
            <div class="d-flex justify-content-between flex-lg-wrap">
              <p class="text-dark fs-5 fw-bold mb-0">
                {% render 'price', product: product, price_class: '', show_compare_at_price: true %}/
                {{ product.variants.first.weight_unit }}
              </p>
              {% render 'quick-add', product: product %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<!-- Vesitable Shop End -->
<style>
  .wishlist_btn {
    left: 210px;
  }
</style>

{% schema %}
{
  "name": "Vegitable Shop",
  "enabled_on": {
    "templates": ["index"]
  },
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Fresh Organic Vegetables"
    },
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Product Collection"
    }
  ],
  "presets": [
    {
      "name": "Vegitable Shop"
    }
  ]
}
{% endschema %}
