<div class="container-fluid fruite py-5">
  <div class="container py-5">
    <div class="tab-class text-center">
      <div class="row g-4">
        <div class="col-lg-4 text-start">
          <h1>{{ section.settings.product_collection_title }}</h1>
        </div>
        <div class="col-lg-8 text-end">
          <ul class="nav nav-pills d-inline-flex text-center mb-5">
            {% for block in section.blocks %}
              {% if forloop.index == 1 %}
                <li class="nav-item">
                  <a
                    class="d-flex m-2 py-2 bg-light rounded-pill active"
                    data-bs-toggle="pill"
                    href="#tab-{{ forloop.index }}"
                  >
                    <span class="text-dark" style="width: 130px;">{{ block.settings.product_collection.title }}</span>
                  </a>
                </li>
              {% else %}
                <li class="nav-item">
                  <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-{{forloop.index}}">
                    <span class="text-dark" style="width: 130px;">{{ block.settings.product_collection.title }}</span>
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="tab-content">
        {% for block in section.blocks %}
          {% if forloop.index == 1 %}
            <div id="tab-{{forloop.index}}" class="tab-pane fade show p-0 active">
              <div class="row g-4">
                <div class="col-lg-12">
                  <div class="row g-4">
                    {% assign collection = collections[block.settings.product_collection.handle] %}
                    {% for product in collection.products %}
                      <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="rounded position-relative fruite-item">
                          <div class="fruite-img">
                            <img
                              src="{{ product.featured_image | img_url: 'master' }}"
                              class="img-fluid w-100 rounded-top"
                              alt=""
                              width="1200"
                              height="1200"
                            >
                          </div>
                          <div
                            class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                            style="top: 10px; left: 10px;"
                          >
                            {{ product.tags }}

                            <span class="wishlist_btn" product-handle-wishlist="{{ product.handle }}">
                              <svg
                                width="40px"
                                height="40px"
                                viewBox="0 0 64 64"
                                xmlns="http://www.w3.org/2000/svg"
                                stroke-width="3"
                                stroke="#000000"
                                fill="none"
                              >
                                <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M9.06,25C7.68,17.3,12.78,10.63,20.73,10c7-.55,10.47,7.93,11.17,9.55a.13.13,0,0,0,.25,0c3.25-8.91,9.17-9.29,11.25-9.5C49,9.45,56.51,13.78,55,23.87c-2.16,14-23.12,29.81-23.12,29.81S11.79,40.05,9.06,25Z"></path></g>
                              </svg>
                            </span>
                          </div>
                          <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                            {% comment %} <h4>{{ product.title }}</h4> {% endcomment %}
                            <a href="{{ product.url }}" class="h5">{{ product.title }}</a>
                            <p>{{ product.description }}</p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                              <p class="text-dark fs-5 fw-bold mb-0">{% render 'price', product: product, price_class: '', show_compare_at_price: true %} / kg</p>
                              {% render 'quick-add', product:product %}
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div id="tab-{{forloop.index}}" class="tab-pane fade show p-0">
              <div class="row g-4">
                <div class="col-lg-12">
                  <div class="row g-4">
                    {% assign collection = collections[block.settings.product_collection.handle] %}
                    {% for product in collection.products %}
                      <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="rounded position-relative fruite-item">
                          <div class="fruite-img">
                            <img
                              src="{{ product.featured_image | img_url: 'master' }}"
                              class="img-fluid w-100 rounded-top"
                              alt=""
                              width="1200"
                              height="1200"
                            >
                          </div>
                          <div
                            class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                            style="top: 10px; left: 10px;"
                          >
                            {{ product.tags }}
                          </div>
                          <span class="wishlist_btn" product-handle-wishlist="{{ product.handle }}">
                            <svg
                              width="40px"
                              height="40px"
                              viewBox="0 0 64 64"
                              xmlns="http://www.w3.org/2000/svg"
                              stroke-width="3"
                              stroke="#000000"
                              fill="none"
                            >
                              <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M9.06,25C7.68,17.3,12.78,10.63,20.73,10c7-.55,10.47,7.93,11.17,9.55a.13.13,0,0,0,.25,0c3.25-8.91,9.17-9.29,11.25-9.5C49,9.45,56.51,13.78,55,23.87c-2.16,14-23.12,29.81-23.12,29.81S11.79,40.05,9.06,25Z"></path></g>
                            </svg>
                          </span>

                          <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                            {% comment %} <h4>{{ product.title }}</h4> {% endcomment %}
                            <a href="{{ product.url }}" class="h4">{{ product.title }}</a>
                            <p>{{ product.description }}</p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                              <p class="text-dark fs-5 fw-bold mb-0">{% render 'price', product: product, price_class: '', show_compare_at_price: true %}/ {{product.variants.first.weight_unit}}</p>
                              {% render 'quick-add', product:product %}
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
  .wishlist_btn {
    left: 210px;
  }
  @media screen and (min-width: 1024px) {
    .wishlist_btn {
      transform: translateX(100%);
      visibility: visible;
    }
  }
</style>

{% schema %}
{
  "name": "Product Collection",
  "enabled_on": {
    "templates": ["index"]
  },
  "settings": [
    {
      "type": "text",
      "id": "product_collection_title",
      "label": "Product Collection Title"
    }
  ],
  "blocks": [
    {
      "type": "product_collection",
      "name": "Select Product Collection",
      "limit": 6,
      "settings": [
        {
          "type": "collection",
          "id": "product_collection",
          "label": "Product Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Collection"
    }
  ]
}
{% endschema %}
