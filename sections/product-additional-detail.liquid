{% schema %}
{
  "name": "Tabbed Content",
  "settings": [],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "tab_content",
      "name": "Additional Content Tab",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Description"
        },
        {
          "type": "liquid",
          "id": "tab_content",
          "label": "Tab Content",
          "default": "This is the content for the tab."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Tabs"
    }
  ]
}
{% endschema %}
<style>
  body {
    font-family: Arial, sans-serif;
  }
  .tabs {
    display: flex;
    justify-content: center;
    cursor: pointer;
    margin-bottom: 20px;
  }
  .tab {
    padding: 10px 20px;
    border: 1px solid #ccc;
    border-bottom: none;
    margin-right: 2px;
    position: relative;
  }
  .tab.active {
    border-top: 2px solid #d19c97;
  }
  .tab-content {
    border: 1px solid #ccc;
    padding: 20px;
    background-color: #fff;
    margin-top: -1px;
    text-align: left;
  }
  .tab-content > div {
    display: none;
  }
  .tab-content > div.active {
    display: block;
  }
  .tab:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #d19c97;
    bottom: -1px;
    left: 0;
    display: none;
  }
  .tab.active:after {
    display: block;
  }
  .tab-content p {
    font-size: 1.25em;
    word-wrap: break-word;
  }
</style>
<div class="tabs">
  {% for block in section.blocks %}
    <div class="tab {% if forloop.first %}active{% endif %}" data-tab="tab{{ forloop.index }}">
      {{ block.settings.tab_title }}
    </div>
  {% endfor %}
</div>
<div class="tab-content">
  {% for block in section.blocks %}
    <div id="tab{{ forloop.index }}" class="tab-pane {% if forloop.first %}active{% endif %}">
      {% if block.type == 'tab_content' %}
        {% if block.settings.app %}
          <h3>Review</h3>
          <div>{{ block.settings.app | escape }}</div>
        {% else %}
          <h3>{{ block.settings.tab_title }}</h3>
          <div>{{ block.settings.tab_content }}</div>
        {% endif %}
      {% elsif block.type == '@app' %}
        {% render block %}
      {% endif %}
    </div>
  {% endfor %}
</div>

<script>
  document.querySelectorAll('.tab').forEach((tab) => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.tab').forEach((item) => item.classList.remove('active'));
      document.querySelectorAll('.tab-content > div').forEach((content) => content.classList.remove('active'));

      tab.classList.add('active');
      document.getElementById(tab.getAttribute('data-tab')).classList.add('active');

      // Initialize the review app if the Reviews tab is selected
      if (tab.getAttribute('data-tab').includes('review')) {
        // Assuming the review app requires a manual initialization function
        if (typeof ShopifyProductReviews !== 'undefined') {
          ShopifyProductReviews.init();
        }
      }
    });
  });
</script>

<!-- Include the review app's JavaScript -->
<script src="https://path.to/review-app.js" defer="defer"></script>
